# ===========================================
# FULL-STACK ECOMMERCE - ENVIRONMENT CONFIG
# ===========================================

# Application Environment
NODE_ENV=development
LOG_LEVEL=debug

# Database Configuration
MONGO_ROOT_USERNAME=admin
MONGO_ROOT_PASSWORD=password123
MONGO_URI_DEVELOPMENT=mongodb://admin:password123@localhost:27017/ecommerce_dev?authSource=admin
MONGO_URI_STAGING=mongodb://admin:password123@mongodb:27017/ecommerce_staging?authSource=admin
MONGO_URI_PRODUCTION=mongodb://admin:secure_password@mongodb:27017/ecommerce_prod?authSource=admin

# Authentication
JWT_SECRET_DEVELOPMENT=dev-secret-key-change-me
JWT_SECRET_STAGING=staging-secret-key-change-me
JWT_SECRET_PRODUCTION=super-secure-production-jwt-secret-key

# Redis Configuration
REDIS_PASSWORD=redis_password_123

# Application URLs
FRONTEND_URL_DEVELOPMENT=http://localhost:3000
FRONTEND_URL_STAGING=https://staging.your-domain.com
FRONTEND_URL_PRODUCTION=https://your-domain.com

BACKEND_URL_DEVELOPMENT=http://localhost:5000
BACKEND_URL_STAGING=https://api-staging.your-domain.com
BACKEND_URL_PRODUCTION=https://api.your-domain.com

# Docker Configuration
GITHUB_REPOSITORY_OWNER=your-github-username
IMAGE_TAG=latest

# SSL Configuration (Production)
SSL_CERT_PATH=/path/to/ssl/cert.pem
SSL_KEY_PATH=/path/to/ssl/private.key

# Monitoring
GRAFANA_ADMIN_PASSWORD=admin123
GRAFANA_SECRET_KEY=your-grafana-secret-key

# Email Configuration (Optional)
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USER=your-email@gmail.com
SMTP_PASS=your-app-password

# Third-party Services (Optional)
STRIPE_SECRET_KEY=sk_test_your_stripe_secret_key
STRIPE_PUBLISHABLE_KEY=pk_test_your_stripe_publishable_key
PAYPAL_CLIENT_ID=your_paypal_client_id
PAYPAL_SECRET=your_paypal_secret

# AWS Configuration (Optional)
AWS_ACCESS_KEY_ID=your_aws_access_key
AWS_SECRET_ACCESS_KEY=your_aws_secret_key
AWS_REGION=us-east-1
S3_BUCKET_NAME=your-s3-bucket

# Security
CORS_ORIGIN=http://localhost:3000
RATE_LIMIT_REQUESTS=100
RATE_LIMIT_WINDOW=900000

# Development Tools
DEBUG=app:*
CHOKIDAR_USEPOLLING=true
FAST_REFRESH=true

# ===========================================
# GITHUB ACTIONS SECRETS
# ===========================================
# Add these to your GitHub repository secrets:
# 
# - MONGO_ROOT_PASSWORD
# - JWT_SECRET_STAGING
# - JWT_SECRET_PRODUCTION
# - REDIS_PASSWORD
# - GRAFANA_ADMIN_PASSWORD
# - GRAFANA_SECRET_KEY
# - DOCKER_REGISTRY_TOKEN (if using external registry)
# ===========================================
